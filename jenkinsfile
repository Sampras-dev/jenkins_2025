pipeline {
    agent none

    stages {
        stage('Testing') {
            agent {label 'Slave1'}
            steps {
                sh '''
                pwd
                ls -ltr
                '''
            }
        }

        stage('Resting') {
            agent {label 'Slave2'}
            steps {
                sh '''
                sleep 5
                '''
            }
        }
    }
}








